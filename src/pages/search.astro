---
import Layout from '../Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
const q = Astro.url.searchParams.get('q') || '';
---
<Layout title={`Arama: ${q || ''}`}>
  <Navbar />
  <main class="container-x section-y">
    <h1 class="text-2xl md:text-3xl font-bold text-black">Arama</h1>
    <p class="mt-2 text-gray-600">Sorgu: <strong>{q}</strong></p>
    <p class="mt-6 text-sm text-gray-500">Arama sonuç sayfasını birlikte zenginleştireceğiz.</p>
  </main>
  <Footer />
</Layout>