---
const { title = 'WellDrive', description = 'Premium, Güçlü, Akıllı, Kompakt, Esnek ve Size Özel' } = Astro.props;
const cssHref = Astro.resolve('./styles/global.css');
---
<html lang="tr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="icon" href="/assets/welldrive-logo.png" />
    <link rel="stylesheet" href={cssHref} />
  </head>
  <body style="font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, 'Apple Color Emoji', 'Segoe UI Emoji';">
    <slot />
  </body>
</html>